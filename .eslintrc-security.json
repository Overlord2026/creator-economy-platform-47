{
  "extends": [
    "plugin:security/recommended"
  ],
  "plugins": ["security"],
  "rules": {
    "security/detect-hardcoded-secrets": "error",
    "security/detect-possible-timing-attacks": "warn",
    "security/detect-eval-with-expression": "error",
    "security/detect-non-literal-fs-filename": "warn",
    "security/detect-non-literal-regexp": "warn",
    "security/detect-non-literal-require": "warn",
    "security/detect-unsafe-regex": "error",
    "security/detect-buffer-noassert": "error",
    "security/detect-child-process": "error",
    "security/detect-disable-mustache-escape": "error",
    "security/detect-object-injection": "warn",
    "security/detect-new-buffer": "error",
    "security/detect-pseudoRandomBytes": "error",
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.object.name=\"localStorage\"][callee.property.name=\"setItem\"]",
        "message": "Do not store sensitive data in localStorage. Use secure session storage or allowlisted keys only."
      },
      {
        "selector": "MemberExpression[object.name=\"localStorage\"][property.name=\"setItem\"]",
        "message": "localStorage.setItem usage detected. Ensure only non-sensitive data is stored."
      },
      {
        "selector": "Literal[value=/.*service_role.*/]",
        "message": "Service role keys must not be present in client-side code."
      },
      {
        "selector": "Literal[value=/.*secret.*/i]",
        "message": "Potential secret detected in client code. Move to server-side environment."
      }
    ]
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}