
{
  "info": {
    "name": "API Health Checks",
    "description": "Collection for testing API health endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Endpoint Check",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Test that the status code is 200",
              "pm.test(\"Status code is 200\", function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "// Test that the response is valid JSON",
              "pm.test(\"Response is valid JSON\", function() {",
              "    pm.response.to.be.json;",
              "});",
              "",
              "// Test that the response contains expected fields",
              "pm.test(\"Response has required fields\", function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('status');",
              "    pm.expect(jsonData).to.have.property('uptime');",
              "    pm.expect(jsonData).to.have.property('timestamp');",
              "});",
              "",
              "// Test that the status field is 'healthy'",
              "pm.test(\"Status is healthy\", function() {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.equal('healthy');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://{{projectId}}.supabase.co/functions/v1/health",
          "protocol": "https",
          "host": ["{{projectId}}", "supabase", "co"],
          "path": ["functions", "v1", "health"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "projectId",
      "value": "pxmpxujdorfqrxkiaxxw",
      "type": "string"
    }
  ]
}
