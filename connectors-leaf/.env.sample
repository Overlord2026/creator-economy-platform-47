# Connector & Evidence Service Environment Variables
# Copy to .env and fill in your actual values

# =============================================================================
# CORE INFRASTRUCTURE
# =============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres

# =============================================================================
# DATA CONNECTORS
# =============================================================================

# BridgeFT Configuration
BRIDGEFT_API_KEY=bridgeft_api_key_placeholder
BRIDGEFT_BASE_URL=https://api.bridgeft.com
BRIDGEFT_ENVIRONMENT=sandbox

# ByAllAccounts Configuration  
BYALLACCOUNTS_API_KEY=byallaccounts_api_key_placeholder
BYALLACCOUNTS_BASE_URL=https://api.byallaccounts.com
BYALLACCOUNTS_ENVIRONMENT=sandbox

# Plaid Configuration
PLAID_CLIENT_ID=plaid_client_id_placeholder
PLAID_SECRET=plaid_secret_placeholder
PLAID_ENVIRONMENT=sandbox
PLAID_WEBHOOK_URL=https://your-domain.com/webhooks/plaid

# Akoya Configuration
AKOYA_CLIENT_ID=akoya_client_id_placeholder
AKOYA_CLIENT_SECRET=akoya_client_secret_placeholder
AKOYA_BASE_URL=https://api.akoya.com
AKOYA_ENVIRONMENT=sandbox

# Canoe Configuration
CANOE_API_KEY=canoe_api_key_placeholder
CANOE_BASE_URL=https://api.canoeintelligence.com
CANOE_ENVIRONMENT=sandbox

# iCapital Configuration
ICAPITAL_API_KEY=icapital_api_key_placeholder
ICAPITAL_BASE_URL=https://api.icapital.com
ICAPITAL_ENVIRONMENT=sandbox

# =============================================================================
# NOTARIZATION SERVICES
# =============================================================================

# DocuSign Notary
DOCUSIGN_API_KEY=docusign_api_key_placeholder
DOCUSIGN_BASE_URL=https://demo.docusign.net
DOCUSIGN_ACCOUNT_ID=docusign_account_id_placeholder
DOCUSIGN_USER_ID=docusign_user_id_placeholder
DOCUSIGN_ENVIRONMENT=demo

# NotaryCam
NOTARYCAM_API_KEY=notarycam_api_key_placeholder
NOTARYCAM_BASE_URL=https://api.notarycam.com
NOTARYCAM_ENVIRONMENT=sandbox

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================

# Webhook Security
WEBHOOK_SECRET=webhook_signing_secret_placeholder_change_in_production

# Data Encryption
ENCRYPTION_KEY=32_byte_encryption_key_placeholder_change_in_production
ENCRYPTION_ALGORITHM=aes-256-gcm

# JWT Configuration
JWT_SECRET=jwt_secret_placeholder_change_in_production
JWT_EXPIRES_IN=24h

# TEE Configuration (Optional - for confidential compute)
TEE_ENABLED=false
TEE_ATTESTATION_URL=https://attestation.azure.com
TEE_ENCLAVE_KEY=tee_enclave_key_placeholder

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (for notifications)
RESEND_API_KEY=resend_api_key_placeholder
SENDGRID_API_KEY=sendgrid_api_key_placeholder

# SMS Service (for alerts)
TWILIO_ACCOUNT_SID=twilio_account_sid_placeholder
TWILIO_AUTH_TOKEN=twilio_auth_token_placeholder
TWILIO_PHONE_NUMBER=+1234567890

# Object Storage
AWS_ACCESS_KEY_ID=aws_access_key_placeholder
AWS_SECRET_ACCESS_KEY=aws_secret_key_placeholder
AWS_REGION=us-east-1
AWS_S3_BUCKET=connector-evidence-storage

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/your/slack/webhook
PAGERDUTY_API_KEY=pagerduty_api_key_placeholder

# =============================================================================
# REPORT GENERATION
# =============================================================================

# PDF Generation
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium
REPORT_STORAGE_PATH=/tmp/reports
REPORT_TEMPLATE_PATH=./templates

# =============================================================================
# RATE LIMITING & THROTTLING
# =============================================================================

# API Rate Limits
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Connector Throttling
BRIDGEFT_RATE_LIMIT_PER_MINUTE=60
PLAID_RATE_LIMIT_PER_MINUTE=100
CANOE_RATE_LIMIT_PER_MINUTE=30

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment
NODE_ENV=development
DEBUG=connector:*

# Testing
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/connector_test
CYPRESS_BASE_URL=http://localhost:3000

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_ENCRYPTION=true

# Compliance
SOX_COMPLIANCE_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true

# Data Retention
DEFAULT_DATA_RETENTION_DAYS=2555
PII_DATA_RETENTION_DAYS=1095
FINANCIAL_DATA_RETENTION_DAYS=2555