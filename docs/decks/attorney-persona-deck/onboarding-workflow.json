  "persona": "attorney",
  "estimated_duration": "14-30 days",
  "stages": [
    {
      "stage_id": 1,
      "name": "Client Capture",
      "description": "Initial lead capture via referral form or marketing campaign",
      "duration": "Immediate",
      "triggers": [
        "Referral form submission",
        "Marketing campaign click-through",
        "Website contact form",
        "Phone consultation request"
      ],
      "actions": [
        {
          "action": "UTM tracking",
          "description": "Track source, medium, and campaign data",
          "automation": true
        },
        {
          "action": "Lead scoring",
          "description": "Initial qualification based on practice area and case value",
          "automation": true
        },
        {
          "action": "Notification",
          "description": "Alert attorney team of new lead",
          "automation": true
        }
      ],
      "data_captured": [
        "Contact information",
        "Legal matter type",
        "Urgency level",
        "Referral source",
        "Initial case details"
      ]
    },
    {
      "stage_id": 2,
      "name": "Automated Profile Creation",
