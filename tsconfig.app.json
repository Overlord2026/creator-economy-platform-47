{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "types": ["vite/client"],
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["./src"],
  "exclude": [
    "src/components/estate-planning/**",
    "src/components/tax-planning/**",
    "src/components/vault/**",
    "src/components/vip/**",
    "src/components/webhooks/**",
    "src/components/ui/animated-sheet.tsx"
  ]
}
